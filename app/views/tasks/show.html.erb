<h1>id: <%= @task.id %> のタスク詳細ページ</h1>

<div class="row">
  <div class="col-xs-6">

<table class="table table-bordered">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>ステイタス</th>
    <td><%= @task.status %></td>
  </tr>
</table>

</div>
</div>

<%= link_to '編集する', edit_task_path(@task), class: 'btn btn-default' %>
<%= link_to '削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>